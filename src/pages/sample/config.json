{
  "title": "Sample Page",
  "languages": [{"id": "en", "label": "English"}, {"id": "vi", "label": "Vietnamese"}],
  "content": [
    {
      "type": "Input",
      "label": "Article Title",
      "fieldName": "articleTitle",
      "fieldProps": {
        "iconName": "Apple",
        "placeholder": "Please enter value here"
      },
      "rules": {"required": "Article title is required!"}
    },
    {
      "type": "TextArea",
      "label": "Article Content",
      "fieldName": "articleContent",
      "fieldProps": {
        "placeholder": "Please enter content"
      },
      "rules": {"required": "Article content is required!"}
    },
    {
      "type": "UploadFile",
      "label": "Article images",
      "fieldName": "files",
      "fieldProps": {
        "label": "Upload files",
        "limitSizeInKB": 3000,
        "accept": "image/*",
        "multiple": "multiple",
        "customStyle": {
          "width": "var(--max-mobile-width)"
        }
      },
      "rules": {"required": "Article content is required!"}
    }
  ],
  "actions": [
    {
      "type": "Button",
      "label": "Cancel",
      "fieldProps": {
        "buttonType": "cancel"
      }
    },
    {
      "type": "Button",
      "label": "Save",
      "fieldProps": {
        "type": "submit",
        "buttonType": "primary"
      }
    }
  ]
}
